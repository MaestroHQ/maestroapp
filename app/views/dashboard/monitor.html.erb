<div class="row">
  <div class="column">
    <ul class="breadcrumbs">
      <%= render_breadcrumbs :tag => :li, :separator => "" %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="column">
    <div class="panel">
      <ul class="tabs" data-tab>
        <li class="tab-title active"><a href="#panel2"><i class="fi-graph-trend icon"></i>Events</a></li>
        <li class="tab-title"><a href="#panel1"><i class="fi-widget icon"></i>Monitor</a></li>
      </ul>
      <div class="tabs-content">
        <div class="content" id="panel1">
          <div class="row">
            <div class="column">
              <form>
                <div class="row">
                  <div class="medium-6 columns">
                    <label>Title
                      <input type="text" value="<%= @monitor.title %>" />
                    </label>
                  </div>
                  <div class="medium-6 columns">
                    <label>URL
                      <input type="text" value="<%= @monitor.url %>" />
                    </label>
                  </div>
                </div>
                <div class="row">
                  <div class="columns medium-6">
                    <label>This monitor runs every:
                      <div class="row">
                        <div class="columns small-6">
                          <label>Hours
                            <input type="number" name="hours" placeholder="0"  min="0" />
                          </label>
                        </div>
                        <div class="columns small-6">
                          <label>Minutes
                            <input type="number" name="minutes" value="5"  min="0" />
                          </label>
                        </div>
                      </div>
                    </label>
                  </div>
                  <div class="columns medium-6">
                    <div class="row">
                      <div class="columns">
                        State: Successful
                      </div>
                    </div>
                    <div class="row">
                      <div class="columns">
                        Status: Active
                      </div>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="columns">
                    <a href="#" class="button tiny"><i class="fi-save icon"></i>Update Monitor</a>
                    <a href="#" class="button tiny"><i class="fi-results icon"></i>Test Monitor</a>
                    <a href="#" class="button tiny"><i class="fi-play icon"></i>Start Monitor</a>
                    <a href="#" class="button tiny"><i class="fi-stop icon"></i>Stop Monitor</a>
                    <a href="#" class="button tiny"><i class="fi-trash icon"></i>Delete Monitor</a>

                  </div>
                </div>

              </form>
            </div>
          </div>
        </div>
