<%= form_for(@ragios_monitor) do |f| %>
  <% if @ragios_monitor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ragios_monitor.errors.count, "error") %> prohibited this ragios_monitor from being saved:</h2>
      <ul>
        <% @ragios_monitor.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="columns small-6">
      <label>Title
        <input type="text" name="title" />
      </label>
    </div>
    <div class="columns small-6">
      <label>URL
        <input type="text" name="url" />
      </label>
    </div>
  </div>

  <div class="row">
    <div class="columns medium-6">
      <label>Run this monitor every?
        <div class="row">
          <div class="columns small-4">
            <label>Hours
              <input type="number" name="hours" placeholder="0" />
            </label>
          </div>
          <div class="columns small-4">
            <label>Minutes
              <input type="number" name="minutes" placeholder="0" />
            </label>
          </div>
          <div class="columns small-4">
            <label>Seconds
              <input type="number" name="seconds" placeholder="0" />
            </label>
          </div>
        </div>
      </label>
    </div>
    <div class="columns medium-6">
      <label>Monitor Type</label>
      <input type="radio" name="monitor_type" value="http_check" id="http_check"><label for="http_check">Http check</label>
      <input type="radio" name="monitor_type" value="real_browser_monitor" id="real_browser_monitor" checked="checked"><label for="real_browser_monitor">Real Browser Monitor</label>
    </div>
  </div>

  <div class="row">
    <div class="columns">
      <label>Validations & Actions
        <textarea name="code"></textarea>
      </label>
    </div>
  </div>

  <div class="row">
    <div class="columns">
      <label>Notes
        <textarea name="notes"></textarea>
      </label>
    </div>
  </div>
  <div class="row">
    <div class="columns">
      <button> Submit </button>
    </div>
  </div>
<% end %>

